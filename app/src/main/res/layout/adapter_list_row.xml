<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <ImageView
        android:id="@+id/CoinIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        app:srcCompat="@drawable/ic_image_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.lb.auto_fit_textview.AutoResizeTextView
        android:id="@+id/CoinName"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:text="@string/lorem_ipsum"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="#212121"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/CoinPercent"
        app:layout_constraintStart_toEndOf="@+id/CoinIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CoinValue"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:text="@string/lorem_ipsum"
        android:textColor="#757575"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/CoinName"
        app:layout_constraintStart_toStartOf="@+id/CoinName" />

    <TextView
        android:id="@+id/CoinPercent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:gravity="end|center"
        android:text="100,00%"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="#212121"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/GainArrow"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/GainArrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:cropToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_gain_green_24dp" />

</android.support.constraint.ConstraintLayout>